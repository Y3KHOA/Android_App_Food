<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qldathang"
    tools:context=".Admin.QL_DatHang_Fragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg"
        android:drawableRight="@drawable/order"
        android:gravity="center"
        android:text="Quản lý đặt hàng"
        android:textColor="#F14343"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblDanhSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Danh sách đơn"
        android:textColor="#500BCC"
        android:textSize="12pt"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listdonhang"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/lblDanhSach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>