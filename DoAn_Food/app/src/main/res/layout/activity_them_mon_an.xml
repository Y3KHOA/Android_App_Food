<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonAn.ThemMonAn">

    <EditText
        android:id="@+id/txtTenMonAnMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblThemMonAn"
        android:layout_marginTop="15dp"
        android:hint="Nhập tên món ăn"
        android:textSize="10pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtGiaMonAnMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenMonAnMoi"
        android:layout_marginTop="15dp"
        android:hint="Nhập giá món ăn"
        android:textSize="10pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtChiTietMonAnMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGiaMonAnMoi"
        android:layout_marginTop="15dp"
        android:hint="Nhập chi tiết món ăn"
        android:textSize="10pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblThemMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Thêm Món Ăn"
        android:textColor="@color/teal_200"
        android:textSize="15pt"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txtChiTietMonAnMoi"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/btnUpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtChiTietMonAnMoi"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Upload IMG" />

    <Button
        android:id="@+id/btnThemMonAnMoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="15dp"
        android:text="Xác nhận" />

    <Button
        android:id="@+id/btnHuyThem"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/btnThemMonAnMoi"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Hủy bỏ" />

</RelativeLayout>